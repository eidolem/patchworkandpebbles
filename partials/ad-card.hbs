
{{!-- Style scripts for Sidebar Ad.  Needs to be above the function --}}
<style type="text/css">
	.ad-display-sidebar {display: block;}
	@media only screen and (min-width: 601px) and (max-width: 992px)
		{.ad-display-sidebar {display: none;}}
</style>

{{!-- Style scripts for Banner Bottom Ad.  Needs to be above the function --}}
<style type="text/css">
	.ad-display-banner-bottom {display: block;}
	@media only screen and (max-width: 601px) 
		{.ad-display-banner-bottom {display: none;}}
</style>


<script>
    function populateAd(slug) {
    	var myadslot;
    	var myadchannel;
    	var location='{{adlocation}}';
    	
    	if(location=='sidebar') {
	        switch(slug) {
	            case 'sewing':
	                myadslot = '3320972548';
	                myadchannel = '3162535340';
	                break;
	            case 'career-gender-equality':
	                myadslot = '6274438942';
	                myadchannel = '7453134143';
	                break;
	            case 'sports':
	                myadslot = '9227905344';
	                myadchannel = '8650665745';
	                break;
	            case 'travel':
	                myadslot = '6414039748';
	                myadchannel = '4937306542';
	                break;
	            case 'climbing':
	                myadslot = '9367506147';
	                myadchannel = '2883333744';
	                break;
	            case 'diy-projects':
	                myadslot = '3181371748';
	                myadchannel = '3302136142';
	                break;
	            default: 
	                myadslot = '7650868943';
	                myadchannel = '';
	        	}
	        var adUnit = $('#my-google-ads-sidebar');
	        adUnit.append(
			    '<ins class="adsbygoogle ad-display-sidebar"'
			    + 'data-ad-client="ca-pub-2599762387787801"'
			    + '></ins>'
			);

	        adDisplayParam = {};
			if( (window.innerWidth <= 600) || (window.innerWidth > 992)) {
				adDisplayParam = {google_ad_format: 'auto'};
			}
	    }

	    else {
	    	switch(slug) {
	        case 'sewing':
	            myadslot = '4797705742';
	            myadchannel = '3162535340';
	            break;
	        case 'career-gender-equality':
	            myadslot = '7751172149';
	            myadchannel = '7453134143';
	            break;
	        case 'sports':
	            myadslot = '1704638546';
	            myadchannel = '8650665745';
	            break;
	        case 'travel':
	            myadslot = '7890772948';
	            myadchannel = '4937306542';
	            break;
	        case 'climbing':
	            myadslot = '1844239340';
	            myadchannel = '2883333744';
	            break;
	        case 'diy-projects':
	            myadslot = '4658104945';
	            myadchannel = '3302136142';
	            break;
	        default: 
	            myadslot = '4658104945';
	            myadchannel = '';
	        }
	        var adUnit = $('#my-google-ads-banner-bottom');
            adUnit.append(
			    '<ins class="adsbygoogle ad-display-banner-bottom"'
			    + 'data-ad-client="ca-pub-2599762387787801"'
			    + '></ins>'
			);

	        adDisplayParam = {};
			if( window.innerWidth > 600) {
				adDisplayParam = {google_ad_format: 'auto'};
			}
		}

	adChannelParam = {google_ad_slot: myadslot, google_ad_channel: myadchannel};
	var adParams = $.extend(adChannelParam, adDisplayParam);
    (adsbygoogle = window.adsbygoogle || []).push({params: adChannelParam});
	}

</script>




