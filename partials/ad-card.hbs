	                channel = '6274438942';
	                break;
	            case 'sports':
	                channel = '9227905344';
	                break;
	            case 'travel':
	                channel = '6414039748';
	                break;
	            case 'climbing':
	                channel = '9367506147';
	                break;
	            case 'diy-projects':
	                channel = '3181371748';
	                break;
	            default: 
	                channel = '7650868943';
	        }
	    }
	    else {
	    	switch(slug) {
            case 'sewing':
