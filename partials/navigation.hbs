 {{!-- navbar-fixed required for materialize to stick nav at top --}}
 <div class="navbar-fixed">
    <nav>
        <ul id="dropdown" class="dropdown-content">
            {{#foreach navigation}}
                <li><a href="{{url}}">{{label}}</a></li>
            {{/foreach}}
        </ul>

        <div class="nav-wrapper">
            <a href="{{@blog.url}}" class="hide-on-large-only brand-logo">{{@blog.title}}</a>
            <ul class="right hide-on-med-and-down">
                <li><a href="{{@blog.url}}">Home</a></li>
                <li><a class="dropdown-button" href="#!" data-activates="dropdown">Categories<i class="material-icons right">arrow_drop_down</i></a></li>
                <li><a href="{{url absolute="true"}}/about-me">About</a></li>
                <li><a href="#page-footer">Contact</a></li>
            </ul>

            <a href="#" data-activates="slide-out" class="button-collapse"><i class="material-icons">menu</i></a>
        </div>
    </nav>
</div>

{{!-- Slide-out nav content for small/med screens --}}
<ul id="slide-out" class="side-nav">
    <li><a class="side-nav-title">{{@blog.title}}</a></li>
    <li><div class="divider"></div></li>
    <li><a href="{{@blog.url}}">Home</a></li>
    <li><div class="divider"></div></li>
    <li><a class="subheader">Categories</a></li>
    {{#foreach navigation}}
        <li class="subheader-items"><a href="{{url}}">{{label}}</a></li>
    {{/foreach}}   
    <li><div class="divider"></div></li>
    <li><a href="{{url absolute="true"}}/about-me">About</a></li>
    <li><a href="#page-footer">Contact</a></li>
    <a href="{{url absolute="true"}}/rss/" class="waves-effect waves-light btn z-depth-0"><img class="side-nav-rss" src="{{asset "/svg/rss-light.svg"}}">Subscribe</a>
</ul>