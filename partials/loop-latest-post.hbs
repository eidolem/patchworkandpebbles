
<div class="row slider-container">
    <div class="center-align slider-title col s12">
        <h2> <span class="slider-title-smallfont">the&nbsp;</span>latest</h2>
    </div>
    <div class="center-align slider-title col s10 offset-s1">
        <div class="slider">
            <ul class="slides">
                {{#get "posts" limit=4}}
                    {{#foreach posts}}
                        <li>
                            <img src="{{image}}">
                            <div class="caption left-align">
                                <h3>{{title}}</h3>
                            </div>
                        </li>
                    {{/foreach}}
                {{/get}}
            </ul>
        </div>

    </div>

    <div class="col s12 center-align slider-footer">
        <a class="waves-effect waves-light btn">see all</a>
    </div>
</div>

<div class="divider"></div>