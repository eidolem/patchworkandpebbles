
<article>
    <div class="card z-depth-2 hoverable">
        <a href={{url}}>
            <div class="card-image">
                {{#if image}}
                    <img src="{{image}}">
                {{/if}}
            </div>

            <div class="card-content">
                <header>

                    {{#is "index"}}
                        <section class="card-tag">
                            {{#foreach tags}}
                                {{#if @last}}
                                    <p data-state="{{slug}}">{{name}}</p>
                                {{else}}
                                    <p data-state="{{slug}}">{{name}}, </p>
                                {{/if}}
                            {{/foreach}}
                        </section>
                    {{/is}}

                    <h1 class="card-title">
                        {{title}}
                    </h1>

                    <section class="card-excerpt">
                        <p>{{meta_description}}</p>
                    </section>
                </header>
            </div>
        </a>
    </div>

</article>