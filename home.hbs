        {{>loop-slider tag="sports-fitness-recovery" disp-title="Sports Fitness & Recovery"}}
        <div class="divider"></div>

        <div class="row">
            {{!-- Card for more categories --}}
            <div class="col s12 m6 offset-m3 card-dark">
                {{>categories-card}}
            </div>
            {{!-- Put back after have subscribe email. Card for subscribe --}}
            {{!-- <div class="col s12 m6 card-dark">
                {{>subscribe-card}}
            </div> --}}
        </div>
        <div class="divider"></div>
        {{>loop-slider tag="sewing" disp-title="Quilting & Sewing"}}
        <div class="divider"></div>
        {{>loop-slider tag="climbing" disp-title="Rock Climbing"}}
        <div class="divider"></div>
        {{>loop-slider tag="life" disp-title="Life"}}
        <div class="divider"></div>
        {{>loop-slider tag="van-life" disp-title="Van Life"}}
        <div class="divider"></div>
        {{>loop-slider tag="other" disp-title="Other"}}

    </main>
</div>

