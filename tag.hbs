{{!-- insert everything in this file into the {body} of the default.hbs template --}}
{{!< default}}

{{#tag}}

{{navigation}}
<main>
    <div class="container">
        <div class="row">
            <div class="col s12 m9 l10">
                <header>
                    <h1 class="index-header grey-text text-darken-1 center-align">
                        {{name}}
                    </h1>
                    <h2 class="index-subheader grey-text center-align">
                        - {{../pagination.total}} posts in category -
                    </h2>
                </header>
                {{#get "posts" filter="tag:{{name}}"}}
                    {{#foreach posts}}
                        <article class="post-box hoverable col s6 l4">
                            <a href={{url}}>
                                <img class="z-depth-2 responsive-img" src="{{image}}">
                                <header class="post-title grey-text text-darken-3">
                                    {{title}}</header>
                            </a>
                        </article>
                    {{/foreach}}
                {{/get}}
            </div>

            {{!-- The sidebar --}}
            <div class="col m3 l2 hide-on-small-only">
                <h2>sidebar</h2>
                {{!-- <img class="responsive-img" src="http://placehold.it/350x150"> --}}
                <p> This is some side panel text. This is some side panel text. This is some side panel text. This is some side panel text. </p>
            </div>
        </div>
    </div>
</main>

{{>footer}}

{{/tag}}
