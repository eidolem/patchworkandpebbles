{{!< default}}
{{!-- "< default" means - insert everything in this file into
    the {{{body}}} of the default.hbs template, containing the blog header/footer. --}}

{{!-- Everything inside the #post tags pulls data from the post --}}
{{#post}}

{{!-- The off-canvas-wrapper class hides scroll bars when the sidebar is opened --}}
<div class="off-canvas-wrapper">
    {{!-- All of the content that gets shifted when the nav opens lives in here --}}
    <div class="off-canvas-content" data-off-canvas-content>

        {{!-- The post banner image --}}
        <div class="full-width row">
            <div class="column">
                <div id="header" class="post-header {{#if image}}" style="background-image: url({{image}}){{else}}no-cover{{/if}}">
                </div>
            </div>
        </div>
        {{>navigation}}

        {{!-- The post --}}
        {{!-- First, outer container for the post title, date, paragraphs --}}
        <div class="row">
            <div class="column small-10">
                <main class="post-content" role="main">
                    <article class="{{post_class}}">
                        {{!-- The title, date, tags --}}
                        <div class="row">
                            <div class="column">
                                <h1 class="post-title-postpage">{{title}}</h1>
                            </div>
                        </div>

                        <div class="row">
                            <div class="column">
                                <div class="post-meta" datetime="{{date format="YYYY-MM-DD"}}">{{date format="DD MMMM YYYY"}}
                                    <span class="italicized-words">&ensp;on &ensp;</span>
                                    <span class="post-tag-taller"> {{tags}} </span>
                                </div> 
                            </div>
                        </div>

                        {{!-- The post itself --}}
                        <div class="row">
                            <div class="post-content column">
                                {{content}}
                            </div>
                        </div>

                        {{!-- divider --}}
                        <div class="row">
                            <div class="column">
                                <div class="divider">
                                </div>
                            </div>
                        </div> 


                        {{>social}}

                    </article>
                </main>
            </div>

            {{>sidebar}}
        </div>

        {{>footer}}
    </div>
</div>


{{/post}}
