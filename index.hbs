{{!< default}}
{{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template --}}


<div class="off-canvas-wrapper">
    <div class="off-canvas-wrapper-inner" data-off-canvas-wrapper>
    {{!-- Add the title bar hide for large here --}}
    {{!-- All of the content that gets shifted when the nav opens lives in here --}}
        <div class="off-canvas-content" data-off-canvas-content>
            {{!-- The blog image with the blog title and description centered --}}
            <div class="main-header" style="background-image: url({{@blog.cover}})">
                <div class="row">
                    <div class="column">
                        <div class="span-middle">
                            <h1 class="page-title">{{@blog.title}} </h1>
                            <h2 class="page-description">{{@blog.description}}</h2>
                        </div>
                    </div>
                </div>
            </div>

            {{!-- Holds all of the sliders for various tags --}}
            <div class="slider-container">

                {{> "loop" tag="travel"}}
                {{> "loop" tag="travel"}}
                {{> "loop" tag="travel"}}

            </div>

        </div>
    </div>
</div>



